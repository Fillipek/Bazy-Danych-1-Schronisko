<!DOCTYPE html>
<html lang = "en">
<head>
    <%- include("../head")%>
</head>
<body>
    <%- include("../navbar")%>
    
    <div class = "container rounded-top bg-success text-center text-light p-2 w-75">
        <h2>Przypisz pracownika do personelu</h2>
    </div>
    <div class = "container rounded-bottom bg-light p-3 h-100 w-75">
        <div class = "centered" style="border-color: rgb(223, 223, 223);">
            <form action="/browse/personel_to_pawilony" method="POST">
                <label for="pracownik">Pracownik*</label>

                <div class="input-group mb-3">
                    <select class="custom-select" name = "pracownik">
                        <option selected>Wybierz...</option>
                        <% personel.rows.forEach(pracownik => { %>
                            <option value=<%=pracownik.id_pracownika%>>
                                <%=pracownik.id_pracownika%> - 
                                <%=pracownik.imie%> <%=pracownik.nazwisko%> - 
                                <%=pracownik.pesel%> - 
                                <%=pracownik.stanowisko%>
                            </option>
                        <% }) %>
                    </select>
                </div>

                <label for="pawilon">Pawilon*</label>
                <div class="input-group mb-3">
                    <select class="custom-select" name = "pawilon">
                        <option selected>Wybierz...</option>
                        <% pawilony.rows.forEach(pawilon => { %>
                            <option value=<%=pawilon.id_pawilonu%>>
                                <%=pawilon.id_pawilonu%> - 
                                "<%=pawilon.nazwa%>" - 
                                <%=pawilon.gatunek%> - 
                                <%=pawilon.typ%>
                            </option>
                        <% }) %>
                    </select>
                </div>

                <button type="submit" class="btn center btn-success">Przypisz</button>
              </form>
        </div>
    </div>
</body>
</html>