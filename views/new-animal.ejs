<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("head")%>
</head>

<body>
    <%- include("navbar")%>

        <div class="container rounded-top bg-primary text-center text-light p-2 w-75">
            <h2>Nowe zwierzę w schronisku</h2>
            <h4>Formularz</h4>
        </div>
        <div class="container rounded-bottom bg-light p-3 h-100 w-75">
            <form action="new_animal" method="POST">
                <h4 style="text-align:center">Informacje o zwierzęciu</h4>
                <div class="form-group">
                    <label for="Imię">Imię*</label>
                    <input type="text" class="form-control" name="imie">
                </div>
                <label for="Gatunek">Gatunek*</label>
                <div class="input-group mb-3">
                    <select class="custom-select" name = "gatunek">
                        <option selected>Wybierz...</option>
                        <% gatunki.forEach(gatunek => { %>
                            <option value=<%=gatunek%>><%=gatunek%></option>
                        <% }) %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="Rasa">Rasa</label>
                    <input type="text" class="form-control" name="rasa">
                </div>
                <div class="form-group">
                    <label for="Data urodzenia">Data urodzenia</label>
                    <input type="date" class="form-control" name="data_urodzenia">
                </div>

                <hr/><h4 style="text-align:center">Wpis do schroniska</h4>

                <div class="form-group">
                    <label for="Data przyjęcia">Data przyjęcia*</label>
                    <input type="date" class="form-control" name="data_przyjecia">
                </div>

                <label for="Boks">Boks*</label>
                <div class="input-group mb-3">
                    <select class="custom-select" name="id_boksu">
                        <option selected>Wybierz...</option>
                        <% boksy.rows.forEach(boksy => { %>
                            <option value=<%=boksy.id_boksu%>><%=boksy.numer%> - "<%=boksy.nazwa%>" - <%=boksy.gatunek%></option>
                        <% }) %>
                    </select>
                </div>

                <div class="form-group">
                    <label for="Uwagi">Uwagi</label>
                    <input type="text" class="form-control" name="uwagi">
                </div>

                <small id="Hint" class="form-text text-muted">* Wymagane</small> <br>
                <button onClick="window.history.back()" class="btn center btn-danger">Powrót</button>
                <button type="submit" class="btn center btn-success">Wyślij</button>
            </form>
        </div>
</body>

</html>